<h1>Listing foods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Menu item</th>
    <th>Default price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= link_to food.name, food %></td>
    <td><%= food.description %></td>
    <td><%= food.menu_item_id %></td>
    <td><%= food.default_price %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

